@page
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}
<h4>Welcome to the ToDo List App</h4>
<h4>This App is created by Aakash Sadnani</h4>



<ul>
    @foreach (var col in Model.todoList)
    {
        <li>
            <form method="post">
                <div><label>Title: <input type="text" name="updateTodo.Title" value="@col.Title" /></label></div>
                <div><label>Description: <input type="text" name="updateTodo.Description" value="@col.Description" /></label></div>
                <div><label>Date: <input type="text" name="updateTodo.Time" value="@col.Time" /></label></div>
                <div><label>Completed: <input type="checkbox" checked="@col.check"></label></div>
                    <input type="submit" value="Update" />
                </form>
                <form asp-page="Colordelete" method="post">
                    <input type="hidden" value="@col.Title" name="updateTodo.Title" />
                    <input type="hidden" value="@col.Description" name="updateTodo.Description" />
                    <input type="hidden" value="@col.Time" name="updateTodo.Time" />
                    <input type="hidden" value="@col.check" name="updateTodo.check" />
                    <input type="Submit" value="Delete" />
                </form>
           </li>

    }
</ul>

<form method="Get">
    @*<partial name="_FormInput" model="Model.todo" />*@
                <label>Title: <input type="text" name="todo.Title" /></label>
                <label>Description: <input type="text" name="todo.Description" /></label>
                <label>Date: <input type="datetime" name="todo.Time" value="@DateTime.Now" /></label>
                <label>
                    Done:
                    @Html.CheckBoxFor(m => Model.todo.check)
                </label>

                <input type="submit" />
            </form>


