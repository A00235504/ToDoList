@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h4>Welcome to the ToDo List App</h4>
<h4>This App is created by Aakash Sadnani</h4>
<ul>
    @foreach (var col in Model.todoList)
    {
        <li>
            <form method="post">
                <div><label>Title: <input type="text" name="updateTodo.Title" value="@col.Title" /></label></div>
                <div><label>Description: <input type="text" name="updateTodo.Description" value="@col.Description" /></label></div>
                <div><label>Date: <input type="text" name="updateTodo.Time" value="@col.Time" /></label></div>
                <div><label>Completed: @Html.CheckBoxFor(m => col.check)</label></div>
                <input type="submit" value="Update" />
            </form>
            <form asp-page="Colordelete" method="post">
                <input type="hidden" value="@col.Title" name="updateColor.ShortCode" />
                <input type="hidden" value="@col.Description" name="updateColor.Name" />
                <input type="hidden" value="@col.Time" name="updateColor.RGB" />
                <input type="hidden" value="@Model.todo.check" name="updateColor.check"/>
                <input type="Submit" value="Delete" />
            </form>
        </li>

    }
</ul>

<form method="Get">
    <label>Title: <input type="text" name="todo.Title" /></label>
    <label>Descriptioin: <input type="text" name="todo.Description" /></label>
    @*<label>Date: @DateTime.Now</label>*@
    <label>Date: <input type="datetime" name="todo.Time" value="@DateTime.Now" /></label>
    <label>
        Done:
        @Html.CheckBoxFor(m => Model.todo.check)
    </label>
    <input type="submit" />
</form>

